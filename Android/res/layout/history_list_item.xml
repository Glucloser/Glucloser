<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/history_list_item_name_time_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/listview_padding"
    android:paddingBottom="@dimen/listview_padding" >

    <TextView
        android:id="@+id/history_list_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="@string/place_noun"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_weight="4" />

    <TextView
        android:id="@+id/history_list_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="@string/time_noun"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_weight="1" />

</LinearLayout>