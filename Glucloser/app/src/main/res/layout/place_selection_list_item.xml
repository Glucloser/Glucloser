<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/place_selection_list_item"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/place_selection_list_item_detail1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/place_selection_list_item"
        app:layout_constraintBottom_toTopOf="@+id/place_selection_list_item_detail2"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/place_selection_list_item"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_width="0dp"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />
    <TextView
        android:id="@+id/place_selection_list_item_detail2"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/place_selection_list_item"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/place_selection_list_item"
        app:layout_constraintLeft_toLeftOf="@+id/place_selection_list_item_detail1"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="@+id/place_selection_list_item"
        app:layout_constraintVertical_bias="0.68" />

    <ImageView
        app:srcCompat="@drawable/circle"
        android:id="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/place_selection_list_item"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/place_selection_list_item"
        app:layout_constraintBottom_toBottomOf="@+id/place_selection_list_item"
        android:layout_width="72dp"
        android:contentDescription="@string/place_selection_list_item_image_description"
        android:layout_height="72dp" />

</android.support.constraint.ConstraintLayout>
