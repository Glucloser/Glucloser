<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/log_bolus_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LogBolusEventActivity"
    tools:ignore="MergeRootFrame">

    <android.support.v7.widget.Toolbar
        android:id="@+id/log_bolus_toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/AppTheme"
        app:popupTheme="@style/AppTheme"
        app:layout_constraintRight_toRightOf="@+id/log_bolus_activity"
        app:layout_constraintTop_toTopOf="@+id/log_bolus_activity"
        app:layout_constraintLeft_toLeftOf="@+id/log_bolus_activity"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:text="@string/log_bolus_activity_place_name_placeholder"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:id="@+id/log_bolus_activity_place_name"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/log_bolus_activity"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/log_bolus_activity"
        app:layout_constraintTop_toBottomOf="@id/log_bolus_toolbar"
        app:layout_constraintBottom_toBottomOf="@+id/log_bolus_activity_place_info_container"
        app:layout_constraintVertical_bias="0.18" />

    <Button
        android:text="@string/log_bolus_activity_add_food_button_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/log_bolus_activity_add_food_button"
        app:layout_constraintTop_toBottomOf="@+id/log_bolus_activity_place_info_container"
        app:layout_constraintLeft_toLeftOf="@+id/log_bolus_activity"
        app:layout_constraintRight_toRightOf="@+id/log_bolus_activity" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/log_bolus_activity_add_food_button"
        app:layout_constraintLeft_toLeftOf="@+id/log_bolus_activity"
        app:layout_constraintRight_toRightOf="@+id/log_bolus_activity"
        app:layout_constraintBottom_toBottomOf="@+id/log_bolus_activity"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:id="@+id/log_bolus_activity_place_info_container"
        app:layout_constraintLeft_toLeftOf="@+id/log_bolus_activity"
        app:layout_constraintTop_toBottomOf="@id/log_bolus_toolbar"
        app:layout_constraintRight_toRightOf="@+id/log_bolus_activity"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_height="115dp" />

</android.support.constraint.ConstraintLayout>
