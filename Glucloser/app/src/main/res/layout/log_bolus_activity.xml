<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/log_bolus_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LogBolusEventActivity"
    tools:ignore="MergeRootFrame">

    <android.support.v7.widget.Toolbar
        android:id="@+id/log_bolus_toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/AppTheme"
        app:popupTheme="@style/AppTheme"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:id="@+id/log_bolus_activity_place_info_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_bolus_toolbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_height="85dp">

    </LinearLayout>

    <TextView
        android:text="@string/log_bolus_activity_place_name_placeholder"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:id="@+id/log_bolus_activity_place_name"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_bolus_toolbar"
        app:layout_constraintBottom_toBottomOf="@+id/log_bolus_activity_place_info_container"
        app:layout_constraintVertical_bias="0.18"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <ImageButton
        android:text=""
        android:layout_height="25dp"
        android:id="@+id/log_bolus_activity_set_place_button"
        android:layout_weight="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/log_bolus_activity_place_info_container"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:layout_width="25dp"
        android:background="@drawable/place_pin" />

    <Button
        android:text="@string/log_bolus_activity_add_food_button_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/log_bolus_activity_add_food_button"
        app:layout_constraintTop_toBottomOf="@+id/log_bolus_activity_place_info_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- TODO(nl): recrycler view -->
    <ListView
        android:id="@+id/log_bolus_activity_food_list"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/log_bolus_activity_add_food_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp" />


</android.support.constraint.ConstraintLayout>
